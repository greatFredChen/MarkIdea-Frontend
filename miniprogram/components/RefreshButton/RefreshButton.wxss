/* components/RefreshButton/RefreshButton.wxss */
@import "../../style/weui.wxss";
@import "../../style/z-index.wxss";

.mtb20 {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.menu-a {
  position: fixed;
  top: 50rpx;
  right: 150rpx;
  opacity: 0.8;
  box-shadow: 0 0 10rpx 0rpx #000;
  transition: transform .4s;
  width: 40px !important;
  height: 40px !important;
}

.menu-a, .refresh {
  text-align: center;
  display: block;
  padding: 0;
  margin: 0;
  overflow: hidden;
  background: #0099FF;
  border-radius: 50%;
}

.refresh {
  width: 30px !important;
  height: 30px !important;
  padding: 5px;
}

.menu-a:hover {
  transform: rotate(135deg);
  box-shadow: 10rpx #000;
}