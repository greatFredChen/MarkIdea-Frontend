@import "../../style/weui.wxss";
@import "../../style/z-index.wxss";

.menu-a {
  position: fixed;
  top: 50rpx;
  right: 50rpx;
  opacity: 0.8;
  box-shadow: 0 0 10rpx 0rpx #000;
  transition: transform .4s;
  width: 40px !important;
  height: 40px !important;
  padding: 0;
  margin: 0;
}

.menu-a, .cross {
  text-align: center;
  display: block;
  overflow: hidden;
  background: #0099FF;
  border-radius: 50%;
}

.cross {
  width: 30px !important;
  height: 30px !important;
  padding: 5px;
}

.menu-a.rotate135 {
  transform: rotate(135deg);
}

