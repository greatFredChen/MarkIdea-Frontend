/* components/audioBox/audioBox.wxss */
@import '../../style/weui.wxss';

.audio-view__body {
  border: 1px dashed #000;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.button-width {
  width: 20%;
}

.audio-width {
  width: 80%;
}

.all-width {
  width: 100%;
}

.label-style {
  width: 20%;
  font-size: 14px;
}

.audio-column-flex {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.audio-row-flex {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.audio-slider {
  width: 80%;
  margin-left: 0;
}