<!--components/createPanel/createPanel.wxml-->
<view class="create-panel" wx:if="{{showMe}}">
  <view class="two-button-flex mt20" hidden="{{switchButtonGroup}}">
    <button class="weui-btn weui-btn_primary" bindtap="createIdea" open-type="getUserInfo" bindgetuserinfo="getUserInfo">发布想法</button>
  </view>
  <view class="two-button-flex mt20" hidden="{{!switchButtonGroup}}">
    <button class="weui-btn weui-btn_primary" bindtap="settleIdea">选定</button>
    <button class="weui-btn weui-btn_primary" bindtap="cancelIdea">取消</button>
  </view>
  <refresh></refresh>
</view>