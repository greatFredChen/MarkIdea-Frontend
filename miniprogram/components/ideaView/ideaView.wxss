/* components/ideaView/ideaView.wxss */
@import "../../style/weui.wxss";

.weui-dialog__attach {
  left: 16px;
  right: 16px;
  top: 32px;
  bottom: 32px;
  -webkit-transform: unset;
  transform: unset;
  width: unset;
  max-height: unset;
  overflow: auto;
  text-align: left;
}

.weui-dialog__hd__attach {
  color: var(--weui-FG-0);
}

.weui-dialog__ft__attach {
  display: block;
  position: absolute;
  bottom: 0;
  width: 100%;
}

.weui-dialog__ft__attach::after {
  border-top: unset;
}

.weui-article__p__attach {
  color: var(--weui-FG-1);
}

.weui-dialog__ft__flex {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.weui-dialog__ft__button {
  background-color: var(--weui-BRAND);
  color: #FFF;
  height: 40px;
  line-height: 40px;
  width: 40%;
  text-align: center;
  border-radius: 10px;
}

.close-topright {
  position: absolute;
  right: 10px;
  top: 10px;
}