/* components/refreshButton/refreshButton.wxss */
@import "../../style/weui.wxss";
@import "../../style/z-index.wxss";

.mtb20 {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.menu-a {
  position: fixed;
  top: 50rpx;
  right: 150rpx;
  opacity: 0.8;
  box-shadow: 0 0 10rpx 0rpx #000;
  transition: transform .4s;
  width: 80rpx !important;
  height: 80rpx !important;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  background: var(--weui-BRAND);
  border-radius: 50%;
}

.menu-a:hover {
  transform: rotate(135deg);
  box-shadow: 10rpx #000;
}