/* components/searchView/searchView.wxss */
@import "../../style/weui.wxss";
@import "../../comi/comi.wxss";

.weui-dialog__attach {
  left: 16px;
  right: 16px;
  top: 32px;
  bottom: 32px;
  -webkit-transform: unset;
  transform: unset;
  width: unset;
  max-height: unset;
  overflow: auto;
  text-align: left;
  background-color: var(--weui-BG-0);
}

.weui-flex__attach {
  justify-content: space-between;
}

.icon__attach {
  margin-left: 14px;
}

.searchbar-result{
  margin-top:0;
  font-size:14px
}

.searchbar-result
.weui-cell__bd {
  padding:2px 0 2px 20px;
}

.searchbar-result:before {
  display:none
}

.cancle-button {
  width: 40px;
background-color: rgb(237, 237, 237);
border: 3px solid rgba(0, 0, 0, 0.1);
border-radius: 5px;
color: var(--weui-FG-1);
}

.input-view {
  margin: 0;
  padding: 5px 5px 5px 5px;
}

.input {
  padding: 4px 0 0 0;
  width: 100%;
  height: 1.14285714em;
  border: 0;
  font-size: 14px;
  line-height: 1.14285714em;
  box-sizing: content-box;
  background: transparent;
  caret-color: var(--weui-BRAND);
  color: var(--weui-FG-0);
}

.no-data-tip {
  position: relative;
  top: 0;
  padding: 0 .55em;
  background-color: rgb(237, 237, 237);
  color: var(--weui-FG-1);
}